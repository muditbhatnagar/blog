
<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @picture.text %>
</p>
<p>
  <strong>Image:</strong>

  <img src="<%= @picture.photo %>" style="height: 150px; width: 300px;">
</p>

<h2>Comments</h2>
<% @picture.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.comments %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<!-- <h2>Replies</h2> -->

<% @picture.replies.each do |comment| %>
  <p>
    <strong>reply:</strong>
    <%= comment.reply %>
  </p>
   <% end %>

<h2>Add a comment:</h2>
<%= form_for([@picture, @picture.comments.build]) do |f| %>
  <p>
    <%= f.label :comments %><br>
    <%= f.text_field :comments %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h2 class="">Add a reply:</h2>

<%= form_for([@picture, @picture.replies.build]) do |f| %>
  <p>
    <%= f.label :reply %><br>
    <%= f.text_field :reply %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', pictures_path %>